import time
from threading import Thread

def wite_words(word_count, file_name):
    time_start = time.time()
    with open(file_name, 'a', encoding='UTF-8') as file:
        for i in range(1, word_count+1):
            file.write(f'Какое-то слово № {i} \n')
            time.sleep(0.1)
    time_end = time.time()
    time_res = time_end - time_start
    print(f"Завершилась запись в файл {file_name}, затраченное время {time_res} сек.")

time_start1 = time.time()
wite_words(0, 'example1.txt')
wite_words(30, 'example2.txt')
wite_words(200, 'example3.txt')
wite_words(100, 'example4.txt')
time_end1 = time.time()
time_res1 = time_end1 - time_start1
print(f'Общее время работы: {time_res1}')

time_start2 = time.time()
th1 = Thread(target=wite_words(10, 'example5.txt'))
th2 = Thread(target=wite_words(30, 'example6.txt'))
th3 = Thread(target=wite_words(200, 'example7.txt'))
th4 = Thread(target=wite_words(100, 'example8.txt'))

th1.start()
th2.start()
th3.start()
th4.start()
th1.join()

th2.join()
th3.join()
th4.join()
time_end2 = time.time()
time_res2 = time_end2 - time_start2
print(f'Общее время работы с использованием потоков: {time_res2}')
